<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="OverlayActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OverlayActionBarNoIconTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="NoActionBar" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="actionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="placeActionButton">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="shadowText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="menuActionButton">
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:minWidth">@dimen/home_btn_minWidth</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="customRatingBarSmall" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

</resources>
